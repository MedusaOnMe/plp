# PumpPortal API Configuration
PUMPPORTAL_API_KEY=your_pumpportal_api_key_here

# Solana Wallet Configuration (for paying transaction fees)
WALLET_PRIVATE_KEY=your_solana_wallet_private_key_here
WALLET_PUBLIC_KEY=your_solana_wallet_public_key_here

# Optional: Initial buy amount in SOL for each launched token
INITIAL_BUY_AMOUNT=0.01

# Firebase Configuration
# Option 1: For local development - path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=your-firebase-service-account.json

# Option 2: For cloud deployment (Railway) - paste entire JSON as string
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

FIREBASE_PROJECT_ID=your-firebase-project-id

# Dashboard Configuration
DASHBOARD_PORT=3000